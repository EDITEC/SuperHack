<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edit.superhack"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.edit.superhack.SuperHack"
            android:label="@string/title_activity_super_hack" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edit.superhack.ADBviaTCP"
            android:label="@string/title_activity_adbvia_tcp"
            android:windowSoftInputMode="stateAlwaysHidden">"
        </activity>
        <activity
            android:name="com.edit.superhack.HostsEditor"
            android:label="@string/title_activity_hosts_editor"
            android:theme="@style/NoTitleBar">"
        </activity>
        <activity
            android:name="com.edit.superhack.EditHost"
            android:label="@string/title_activity_edit_host"
            android:theme="@style/NoTitleBar" >
        </activity>
        <activity
            android:name="com.edit.superhack.AddHost"
            android:label="@string/title_activity_add_host"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/NoTitleBar" >
        </activity>
    </application>

</manifest>